---
layout: default
title: Blog
section: blog
generator: pagination
pagination:
    max_per_page: 5
use: [posts]
---
{% block content %}
    {% import 'macros.html' as macros %}

    {% for post in page.pagination.items %}
        <article>
            <header>
                <h1>{{ post.title }}</h1>
                <p class="blog-post-date">Posted by {{ post.author }} on {{ macros.date(post.calculated_date) }}</p>
            </header>

            {{ post.blocks.content|raw }}
        </article>
    {% endfor %}

    {% if page.pagination.previous_page or page.pagination.next_page %}
        <nav>
            {% if page.pagination.previous_page %}<a href="{{ site.url }}{{ page.pagination.previous_page.url }}">Newer Posts</a>{% endif %}<br />
            {% if page.pagination.next_page %}<a href="{{ site.url }}{{ page.pagination.next_page.url }}">Older Posts</a>{% endif %}<br />
        </nav>
    {% endif %}
{% endblock %}
