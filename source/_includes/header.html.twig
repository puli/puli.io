<header class="header">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="/images/logo-h-white.png" alt="The Puli logo" /></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="navbar-form navbar-right">
                    <a href="/" class="btn btn-default"><span class="glyphicon glyphicon-download"></span>Download</a>
                </div>

                <ul class="nav navbar-nav navbar-right">
                    {% set section = page.section|default('home') %}
                    <li{% if 'features' == section %} class="active"{% endif %}><a href="/">Features</a></li>
                    <li{% if 'docs' == section %} class="active"{% endif %}><a href="http://docs.puli.io/en/latest /" title="The Puli documentation">Documentation</a></li>
                    <li{% if 'blog' == section %} class="active"{% endif %}><a href="/blog">Blog</a></li>
                    <li><a href="https://github.com/puli" title="The Puli organization GitHub">GitHub</a></li>
                    <li><a href="https://github.com/puli/issues/issues" title="Puli's issue tracker">Issues</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
</header>
